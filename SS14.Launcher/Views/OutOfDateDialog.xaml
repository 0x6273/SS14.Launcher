<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="100"
        MinWidth="350" MinHeight="100"
        Width="350" Height="100"
        x:Class="SS14.Launcher.Views.OutOfDateDialog"
        Icon="/Assets/icon.ico"
        Title="Out Of Date!"
        WindowStartupLocation="CenterOwner"
        CanResize="False">

  <DockPanel Margin="4">
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" DockPanel.Dock="Bottom">
      <Button Name="DownloadButton" Content="Download" />
      <Button Name="ExitButton" Content="Exit" />
    </StackPanel>
    <TextBlock TextWrapping="Wrap"
               Text="This launcher is out of date! It probably won't work correctly anymore, so you should download the new version from the website." />
  </DockPanel>
</Window>
