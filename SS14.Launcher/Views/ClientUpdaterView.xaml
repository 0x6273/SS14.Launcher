<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:SS14.Launcher.ViewModels;assembly=SS14.Launcher"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SS14.Launcher.Views.ClientUpdaterView">
    <Design.DataContext>
        <vm:ClientUpdaterViewModel />
    </Design.DataContext>

    <DockPanel>
        <TextBlock Margin="2" VerticalAlignment="Center" FontSize="18" DockPanel.Dock="Left" Text="{Binding StatusText}"
                   FontFamily="/Assets/Fonts/noto_sans/*.ttf#Noto Sans" />
        <Button Margin="2" DockPanel.Dock="Right" FontSize="18" IsEnabled="{Binding LaunchButtonEnabled}"
                Command="{Binding LaunchButtonPressed}" Content="{Binding LaunchButtonText}"
                FontFamily="/Assets/Fonts/noto_sans/*.ttf#Noto Sans">
        </Button>
        <ProgressBar Margin="2" DockPanel.Dock="Bottom" IsIndeterminate="{Binding IsProgressIndeterminate}"
                     Value="{Binding Progress}" IsVisible="{Binding ProgressVisible}"
                     Maximum="1" MinWidth="50"/>
    </DockPanel>
</UserControl>