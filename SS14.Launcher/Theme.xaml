<Style xmlns="https://github.com/avaloniaui"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <Style.Resources>
        <Color x:Key="ThemeAccentColor">#FF119EDA</Color>
        <Color x:Key="ThemeBackgroundColor">#20202a</Color>
        <Color x:Key="ThemeForegroundColor">#FFFFFF</Color>

        <SolidColorBrush x:Key="ThemeBackgroundBrush" Color="{DynamicResource ThemeBackgroundColor}" />
        <SolidColorBrush x:Key="ThemeForegroundBrush" Color="{DynamicResource ThemeForegroundColor}"></SolidColorBrush>
    </Style.Resources>
</Style>